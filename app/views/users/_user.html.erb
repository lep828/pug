<div class="medium-4 columns panel end" data-equalizer-watch>
  <div class="user-image">
    <% if user.user_image.present? %>
    <%= link_to image_tag(user.user_image.thumb.url), user.user_image.url %>
    <% else %>
    <%= image_tag 'DefaultUserPic.png' %>
    <% end %>
  </div>
  <h4 class="users-heading"><%= user.username %></h4>
  <p><%= link_to "Show", user, class: "button radius small" %></p>
</div>