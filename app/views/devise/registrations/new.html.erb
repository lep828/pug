<h2 class="text-center">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div class="row">
  <div class="medium-2 columns">
    <%= f.label :username %>
  </div>
  <div class="medium-10 columns">
    <%= f.text_field :username %>
  </div>

  <div class="medium-2 columns">
    <%= f.label :user_image %>
  </div>
  <div class="medium-10 columns">
    <%= f.file_field :user_image %>
  </div>

  <div class="medium-2 columns">
    <%= f.label :description %>
  </div>
  <div class="medium-10 columns">
    <%= f.text_area :description %>
  </div>

  <div class="medium-2 columns">
    <%= f.label :email %>
  </div>
  <div class="medium-10 columns">
    <%= f.email_field :email %>
  </div>

  <div class="medium-2 columns">
    <%= f.label :password %>
  </div>
  <div class="medium-10 columns">
    <%= f.password_field :password, autocomplete: "off", placeholder: "#{@minimum_password_length} characters minimum" %>
  </div>

  <div class="medium-2 columns">
    <%= f.label :password_confirmation %>
  </div>
  <div class="medium-10 columns">
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "button small radius right devise-links" %>
  </div>
<% end %>
</div>