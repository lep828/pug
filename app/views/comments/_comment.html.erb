<div>
  <p><%= comment.comment %></p>
  <p>User: <%= comment.user.try(:username) %></p>
  <% if current_user.id == comment.user.id %>
  <%= link_to 'Delete Comment', comment_path(comment, commentable_type: commentable.class.to_s.underscore, commentable_id: commentable.id), method: :delete, class: "button tiny radius" %>
  <% end %>
</div>