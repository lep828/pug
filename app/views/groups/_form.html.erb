<%= form_for @group do |f| %>
  <% if @group.errors.any? %>
    <% for message in @group.errors.full_messages %>
      <div class="alert alert-danger" role="alert">
        <%= message %>
      </div>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", value: @group.name %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", value: @group.description %>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.text_field :image, class: "form-control", value: @group.image %>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :group_image, class: "form-control", value: @group.group_image %>
  </div>
  
  <%= f.submit class: "button small" %>

<% end %>