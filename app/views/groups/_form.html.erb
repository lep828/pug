<%= form_for @group do |f| %>
  <% if @group.errors.any? %>
    <% for message in @group.errors.full_messages %>
      <div class="alert alert-danger" role="alert">
        <%= message %>
      </div>
    <% end %>
  <% end %>
  <div class="row">
    <div class="medium-12 columns">
      <%= f.label "Group Name" %>
      <%= f.text_field :name, placeholder: "Name", value: @group.name %>
    </div>
    <div class="medium-12 columns">
      <%= f.label :description %>
      <%= f.text_area :description, placeholder: "Tell me something about your Group.", value: @group.  description %>
    </div>
    <div class="medium-12 columns">
      <%= f.label :image %>
      <%= f.file_field :group_image, value: @group.group_image %>
    </div>
    
    <%= f.submit class: "button small radius" %>
  </div>
<% end %>
