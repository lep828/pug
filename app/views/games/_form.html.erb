<%= form_for @game do |f| %>
  <% if @game.errors.any? %>
    <% for message in @game.errors.full_messages %>
      <div class="alert alert-danger" role="alert">
        <%= message %>
      </div>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", value: @game.name %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", value: @game.description %>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.text_field :image, class: "form-control", value: @game.image %>
  </div>
  
  <%= f.submit %>

<% end %>